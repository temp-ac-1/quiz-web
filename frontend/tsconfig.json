{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "vite/client"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "include": [
    "src",
    "src/**/*", // Include all files in src
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}